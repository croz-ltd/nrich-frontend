{
  "include": [
    "demo",
    "libs/**/src",
    "libs/**/test",
    "testconfig"
  ],
  "exclude": [
    "node_modules",
    "libs/**/dist/**/*"
  ],
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "allowJs": true,
    "baseUrl": "."
  }
}
